@model IEnumerable<Entidade.Proposta>

@{
    ViewBag.Title = "Consulta de Propostas";
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                @Html.ActionLink("Cadastrar Novo", "Create", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <div class="separator">&nbsp;</div>
        <table class="table table-condensed table-striped table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fornecedores.Nome)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fornecedores.Nome)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
