@model IEnumerable<Entidade.ItemProposta>

@{
    ViewBag.Title = "Itens da Proposta";
    Layout = null;
}

<div class="panel">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalExemplo">
                    Incluir Novo Item
                </button>
            </div>
        </div>
        <div class="separator">&nbsp;</div>
        <table class="table table-condensed table-striped table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descrição)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descrição)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<!-- Modal de Cadastro -->
<div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Inclusão de Item da Proposta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Html.Action("Create", new { idProposta = ViewBag.IdProposta })
            </div>
        </div>
    </div>
</div>